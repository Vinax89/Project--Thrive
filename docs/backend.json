{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile within the application.",
      "type": "object",
      "properties": {
        "uid": { "type": "string", "description": "The user's unique ID from Firebase Auth." },
        "email": { "type": "string", "description": "The user's email address.", "format": "email" },
        "displayName": { "type": "string", "description": "The user's display name." },
        "photoURL": { "type": "string", "description": "URL of the user's profile picture." },
        "createdAt": { "type": "string", "format": "date-time", "description": "Timestamp of when the profile was created." },
        "lastLogin": { "type": "string", "format": "date-time", "description": "Timestamp of the user's last login." }
      },
      "required": ["uid", "email"]
    },
    "Debt": {
      "title": "Debt",
      "description": "Represents a financial debt.",
      "type": "object",
      "properties": {
        "name": { "type": "string", "description": "Name of the debt (e.g., Credit Card, Student Loan)." },
        "amount": { "type": "number", "description": "The total amount of the debt." },
        "type": { "type": "string", "enum": ["Credit Card", "Loan", "BNPL"], "description": "The type of the debt." },
        "interestRate": { "type": "number", "description": "The interest rate of the debt (optional)." },
        "minimumPayment": { "type": "number", "description": "The minimum monthly payment (optional)." }
      },
      "required": ["name", "amount", "type"]
    },
    "Transaction": {
      "title": "Transaction",
      "description": "Represents a single financial transaction.",
      "type": "object",
      "properties": {
        "name": { "type": "string", "description": "Description of the transaction." },
        "amount": { "type": "number", "description": "The amount of the transaction." },
        "date": { "type": "string", "format": "date-time", "description": "The date of the transaction." },
        "category": { "type": "string", "description": "The category of the transaction (e.g., Food, Transport)." }
      },
      "required": ["name", "amount", "date", "category"]
    },
    "BudgetCategory": {
      "title": "Budget Category",
      "description": "Represents a category in a user's budget.",
      "type": "object",
      "properties": {
        "name": { "type": "string", "description": "The name of the category (e.g., Groceries, Rent)." },
        "allocated": { "type": "number", "description": "The amount allocated to this category." }
      },
      "required": ["name", "allocated"]
    },
    "Investment": {
        "title": "Investment",
        "description": "Represents a user's investment.",
        "type": "object",
        "properties": {
            "name": { "type": "string", "description": "Name of the investment (e.g., Apple Inc.)." },
            "type": { "type": "string", "description": "Type of investment (e.g., Stock, ETF)." },
            "quantity": { "type": "number", "description": "Number of shares or units." },
            "purchasePrice": { "type": "number", "description": "The price at which the investment was purchased per unit." },
            "currentPrice": { "type": "number", "description": "The current market price per unit." }
        },
        "required": ["name", "type", "quantity", "purchasePrice", "currentPrice"]
    }
  },
  "auth": {
    "providers": ["password", "google.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores user profile information. The document ID is the user's UID."
    },
    "/users/{userId}/transactions/{transactionId}": {
      "schema": { "$ref": "#/entities/Transaction" },
      "description": "Sub-collection for a user's transactions."
    },
    "/users/{userId}/debts/{debtId}": {
      "schema": { "$ref": "#/entities/Debt" },
      "description": "Sub-collection for a user's debts."
    },
    "/users/{userId}/budgetCategories/{categoryId}": {
      "schema": { "$ref": "#/entities/BudgetCategory" },
      "description": "Sub-collection for a user's budget categories."
    },
    "/users/{userId}/investments/{investmentId}": {
        "schema": { "$ref": "#/entities/Investment" },
        "description": "Sub-collection for a user's investments."
    }
  }
}
